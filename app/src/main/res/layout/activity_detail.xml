<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_customPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.movie.mcs.testingcode.com.example.challenge.testingcode.DetailActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <include layout="@layout/returning_toolbar" />
    </android.support.design.widget.AppBarLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#AA000000"
            >

            <FrameLayout
                android:id="@+id/frm_photo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="120dp">

                <ImageView
                    android:id="@+id/img_up"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:paddingTop="24dp"
                    android:paddingLeft="24dp"/>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/frame" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginTop="270dp"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
                <TextView
                    android:id="@+id/etxt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/etxt_release"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:gravity="top"
                    android:textStyle="italic" />
                <TextView
                    android:id="@+id/etxt_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:gravity="top"
                    android:textAlignment="center"
                    android:textStyle="normal"/>
            </LinearLayout>

        </FrameLayout>
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
