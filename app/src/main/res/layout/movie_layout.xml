<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_movie"
    android:layout_margin="4dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="6dp"
        android:background="@color/colorAccentTransparent"
        >

        <ImageView
            android:id="@+id/poster_adding"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dp"
            android:src="@drawable/noimage" />
        <TextView
            android:id="@+id/lower_adding"
            android:layout_width="fill_parent"
            android:layout_height="26dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/poster_adding"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:textStyle="italic"
            android:text="Description"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/released_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/lower_adding"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="6dip"
            android:textSize="10sp"
            android:textColor="@color/colorText"
            android:src="@drawable/noimage" />
        <TextView
            android:id="@+id/upper_adding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/lower_adding"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toRightOf="@id/poster_adding"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:text="Example application"
            android:textSize="16sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>